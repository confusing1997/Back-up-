@model IEnumerable<QLKS.Models.tblNhanVien>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="background-color: #b1c3f0;">
    <div>Danh sách nhân viên</div>
</div>


<div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Họ và tên
                    </th>
                    <th>
                        Chức vụ
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        SĐT
                    </th>
                    
                </tr>
            </thead>

            <tbody>
                @{ 
                    int stt = 0;
                }

                @foreach (var item in Model)
                {

                    stt++;

                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ho_ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tblChucVu.chuc_vu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dia_chi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sdt)
                        </td>
                        

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
