@model IEnumerable<QLKS.Models.tblLoaiPhong>

@{
    ViewBag.Title = "Danh sách phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="background-color: #b1c3f0;">
    <div>Danh sách loại phòng</div>
</div>

<div >
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>Mô tả</th>
                <th>
                    Số giường
                </th>
                <th>
                    Đơn giá/ VNĐ
                </th>
                <th>
                    Phí phát sinh
                </th>
                <th>
                    Thao tác
                </th>
            </tr>
        </thead>

        <tbody>
            @{ 
                int stt = 0;
            }
            @foreach (var item in Model)
            {
                stt++;
            <tr>
                <td>
                    @stt
                </td> 
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.anh)" width="80px" height="50px" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.mo_ta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ti_le_phu_thu)%
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa thông tin", "SuaLoaiPhong", 
                    new { id = item.loai_phong }, new { @class="btn btn-primary" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
