@using QLKS.Models
@model List<tblHoaDon>

@{
    ViewBag.Title = "PhongCoTheDoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="background-color: #b1c3f0;">
    <div>Đổi phòng</div>
</div>

<div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Số giường</th>
                    <th>Số phòng</th>
                    <th>Vị trí</th>

                    <th>Tình trạng phòng</th>
                    @if (Session["NV"] != null && ((QLKS.Models.tblNhanVien)Session["NV"]).ma_chuc_vu == 3)
                    {
                        <th>Thao tác</th>}


                </tr>
            </thead>

            <tbody>
                @{ int stt = 0; }
                @foreach (var item in Model)
                {
                    if (item.tblPhieuDatPhong.tblPhong.ma_tinh_trang == 2)
                    {
                        stt++;
                        <tr>
                            <td>@stt</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblLoaiPhong.mo_ta</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.so_phong</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblTang.ten_tang</td>
                            <td>
                                <span>
                                    @item.tblPhieuDatPhong.tblPhong.tblTinhTrangPhong.mo_ta
                                </span>
                            </td>

                            <td>
                                <a href="@Url.Action("DoiPhong", "HoaDon", new { id = item.ma_hd })">
                                    Đổi sang phòng khác
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

