@model IEnumerable<QLKS.Models.tblHoaDon>

@{
    ViewBag.Title = "PhongCoTheThanhToan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="background-color: #b1c3f0;">
    <div>Phòng đang được sử dụng</div>
</div>

<div>
    <div>
        <table class="table table-bordered">

            <thead>
                <tr>
                    <th>Tên phòng</th>
                    <th>Số giường</th>
                    <th>Vị trí phòng</th>
                    <th>Thời gian khách nhận phòng</th>
                    <th>Thời gian khách trả phòng</th>
                    <th>Tình trạng hóa đơn</th>
                    <th>Thao tác</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    if (item.ma_tinh_trang == 1)
                    {
                        <tr>
                            <td>@item.tblPhieuDatPhong.tblPhong.so_phong</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblLoaiPhong.mo_ta</td>
                            <td>@item.tblPhieuDatPhong.tblPhong.tblTang.ten_tang</td>
                            <td>@item.tblPhieuDatPhong.ngay_vao</td>
                            <td>@item.tblPhieuDatPhong.ngay_ra.Value.ToShortDateString()</td>
                            <td>@item.tblTinhTrangHoaDon.mo_ta</td>
                            <td>
                                <a href="@Url.Action("ThanhToan", "HoaDon", new { id = item.ma_hd })" 
                                   class="btn btn-primary">
                                    Thông tin hóa đơn
                                </a>
                            </td>
                        </tr>
                    }

                }

            </tbody>
        </table>
    </div>
</div>
