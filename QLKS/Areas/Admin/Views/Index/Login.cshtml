@model QLKS.Models.tblNhanVien

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập</title>
    <link href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Admin/css/sb-admin.css" rel="stylesheet">
</head>

<body style="background-image: url('/Content/Home/images/Logo/background.jpg')">
    <div>
        <div class="col-md-4" style="background-color: snow; margin-left: 30%;">
            <h3>Đăng nhập</h3>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Index", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true) // displays all the error messages

                    <div class="form-group">
                        <label for="" style="font-weight: bold;">Username</label>
                        @Html.TextBoxFor(u => u.tai_khoan, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.tai_khoan, "", new { @class="text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="" style="font-weight: bold;">Password</label>
                        @Html.PasswordFor(u => u.mat_khau, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.mat_khau, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Đăng nhập" 
                            onclick="return checkDangNhap();"/>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

<script>
    function checkDangNhap() {
        var userName = $("#tai_khoan").val();
        var psWord = $("#mat_khau").val();

        if (userName == "") {
            return false;
        } else if (psWord == "") {
            return false;
        } else {
            return true;
        }
    }
</script>
</html>
