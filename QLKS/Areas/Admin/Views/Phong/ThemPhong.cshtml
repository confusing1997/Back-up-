@model QLKS.Models.tblPhong

@{
    ViewBag.Title = "ThemPhong";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ThemPhong</h2>

@using (Html.BeginForm("ThemPhong", "Phong", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.so_phong, "Tên phòng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.so_phong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.so_phong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.loai_phong, "Số giường", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("loai_phong", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.loai_phong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ma_tang, "Vị trí phòng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ma_tang", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_tang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hidden">
            @Html.LabelFor(model => model.ma_tinh_trang, "ma_tinh_trang", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ma_tinh_trang", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_tinh_trang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xác nhận" 
                       onclick="return checkPhong()" 
                       class="btn btn-primary" />
            </div>
        </div>

        <div>
            <div class="">
                <a href="@Url.Action("Index", "Phong")" class="btn btn-success" >Hủy bỏ</a>
            </div>
        </div>
    </div>

    
}

<script>

    function checkPhong() {

        var so_phong = $("#so_phong").val();
        var loai_phong = $("#loai_phong").val();
        var ma_tang = $("#ma_tang").val();

        if (so_phong == "" || loai_phong == "" || ma_tang == "") {
            return false;
        }
        return true;

    }

</script>


