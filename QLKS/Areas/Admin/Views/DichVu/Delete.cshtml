@model QLKS.Models.tblDichVu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa ?</h3>
<div>
    <hr />
    <div>
        <div class="row">
            <div class="col-md-3">
                <img src="@Html.DisplayFor(model => model.anh)" style="width:100%;max-width:200px" />
            </div>
            <div class="col-md-5">
                <dl class="dl-horizontal">
                    <dt>
                        Tên món ăn
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ten_dv)
                    </dd>

                    <dt>
                        Đơn giá
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.gia)
                    </dd>

                    <dt>
                        Đơn vị
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.don_vi)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
        
</div>
