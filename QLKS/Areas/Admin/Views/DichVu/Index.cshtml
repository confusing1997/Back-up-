@model IEnumerable<QLKS.Models.tblDichVu>

@{
    ViewBag.Title = "Danh sách dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="background-color: #b1c3f0;">
    <div>Danh sách dịch vụ</div>
</div>

<div style="margin: 5px;">
    @using (Html.BeginForm("Index", "DichVu", FormMethod.Get))
    {
        @Html.TextBox("searching")<input type="submit" value="Tìm kiếm" class="btn btn-primary"/> // name, value, new {}
    }
</div>


<div>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tên món
                </th>
                <th>
                    Đơn giá/ VNĐ
                </th>
                <th>
                    Mô tả
                </th>
                <th>
                    Số lượng trong bếp
                </th>
                <th>
                    Thao tác
                </th>
            </tr>
        </thead>

        <tbody>

            @{ 
                int stt = 0;
            }

            @foreach (var item in Model)
            {
                stt++;
                        
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ten_dv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gia)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.anh)" width="50px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelitem => item.ton_kho)
                        </td>
                        <td>
                            @Html.ActionLink("Chỉnh sửa thông tin", "Edit", new { @id=item.ma_dv },
                            new { @class="btn btn-primary" })
                        </td>
                       
                    </tr>
                        
            }
        </tbody>
    </table>
</div>